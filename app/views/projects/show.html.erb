<h1><%= @project.name %>!</h1>

<nav>
  <ul>
    <li><a href="">Tasks</a></li>
    <li><a href="">Settings</a></li>
  </ul>
</nav>

<table valign='top'>
  <thead>
    <tr>
      <th>#</th>
      <th>task</th>
      <th style="width: 8em;">log time</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "category_row", collection: @project.categories, as: :category %>

    <%= render partial: "task_row", collection: @project.tasks.where(category: nil), as: :task %>

    <tr>
      <td>1</td>
