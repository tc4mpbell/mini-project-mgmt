        <button>Save</button>
      </td>
      <td>
        <div class="btn-group">
          <!-- <select name="" id=""> -->
          <!-- <a value="">--- choose status ---</a> -->
          <a href="#" value="">I'm working on this</a>
          <a href="#" value="">Blocked!</a>
          <a href="#" value="">Ready for review</a>
          <a href="#" value="">Failed testing</a>
          <!-- </select> -->
        </div>
      </td>
      <td><a href="">notes</a></td>
    </tr>
  </tbody>
</table>

<form action="">
  <label for="">Task</label>
  <br>
  <textarea name="name" rows="3" cols="80"></textarea>
</form>

<button>Add a task</button>